{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths":{
      "@/*": ["src/*"]
    },
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
